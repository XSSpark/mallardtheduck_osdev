{
    "editor.fontFamily": "Fira Code",
    "files.exclude": {
        "**/*.d": true,
        "**/*.o": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "${workspaceFolder}/src/binutils-*": true,
        "${workspaceFolder}/src/gcc-*": true,
        "${workspaceFolder}/src/build-*": true,
        "${workspaceFolder}/src/3rdparty/originals": true,
    },
    "files.associations": {
        "*.inf": "ini",
        "*.hpp": "cpp",
        "type_traits": "cpp",
        "local_type_traits": "cpp",
        "thread": "cpp",
        "charconv": "cpp",
        "condition_variable": "cpp",
        "future": "cpp",
        "io_context": "cpp",
        "socket": "cpp",
        "timer": "cpp",
        "*.inc": "cpp",
        "array": "cpp",
        "hash_map": "cpp",
        "hash_set": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "rope": "cpp",
        "slist": "cpp",
        "initializer_list": "cpp",
        "regex": "cpp",
        "valarray": "cpp",
        "internet": "cpp",
        "string_view": "cpp"
    },
    "editor.fontLigatures": true
}